<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsFragment"
    android:orientation="vertical"
    android:background="@color/backgroundPrimary"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/learn_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выучено слов 13"/>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/rv_learn_word"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:paddingTop="@dimen/top_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="38dp">



    <Button
        android:id="@+id/show_word_learn"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показать\n выученные слова" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_save_word"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Сохранить"
        />

    </LinearLayout>
    </LinearLayout>
</ScrollView>